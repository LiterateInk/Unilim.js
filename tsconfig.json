{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "~cas/*": ["./src/cas/*"],
      "~iut/*": ["./src/iut/*"],
      "~biome/*": ["./src/biome/*"],
      "unilim": ["./src/index.ts"]
    },

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src", "examples", "eslint.config.ts", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
