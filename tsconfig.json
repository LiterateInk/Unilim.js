{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~cas/*": ["./src/cas/*"],
      "~iut/*": ["./src/iut/*"],
      "~biome/*": ["./src/biome/*"],
    },
    
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src", "examples", "eslint.config.js", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}
